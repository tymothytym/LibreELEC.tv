. /etc/profile

oe_setup_addon service.x11vnc

chmod a+x $ADDON_DIR/bin/*

x11vnc -storepasswd $VNC_PASSWORD $ADDON_HOME/passwd.kodi >/dev/null &>/dev/null
exec x11vnc -forever -loop -nopw -rfbauth $ADDON_HOME/passwd.kodi -display :0 -rfbport $VNC_PORT &>/dev/null
